<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>

  <!-- 
    Policy definitions for LanguageSelector actions.
    (C) 2008-2010 Canonical Ltd.
    Author: Michael Vogt <mvo@ubuntu.com>
  -->

  <vendor>LanguageSelector</vendor>
  <vendor_url>http://launchpad.net/language-selector/</vendor_url>


  <action id="com.ubuntu.languageselector.setsystemdefaultlanguage">
    <_description>Set system default language</_description>
    <_message>System policy prevented setting default language</_message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

</policyconfig> 

